{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "groupName": "upgrade all non-major dependencies (Gradle)",
      "matchManagers": [
        "gradle"
      ],
      "matchPackagePatterns": [
        "*"
      ],
      "groupSlug": "gradle",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    },
    {
      "groupName": "upgrade all non-major dependencies (npm)",
      "matchManagers": [
        "npm"
      ],
      "matchPackagePatterns": [
        "*"
      ],
      "groupSlug": "npm",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    }
  ]
}
